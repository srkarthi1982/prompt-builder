---
import AppShell from "../layouts/AppShell.astro";
import { AvContainer, AvButton } from "@ansiversa/components";

const title = "Prompt Builder – Ansiversa";
const description = "Design reusable AI prompts easily.";
---

<AppShell title={title} description={description}>
  <!-- Hero -->
  <section class="av-hero">
    <AvContainer size="narrow" className="av-hero__content--narrow">
      <div class="av-hero__content">
        <div class="av-kicker">
          <span>Writing & Content · Ansiversa Mini App</span>
        </div>
        <h1 class="av-gradient-text">Prompt Builder</h1>
        <p>
          Design reusable AI prompts easily.
        </p>
      </div>
      <div class="av-cta-row">
        <AvButton href="https://prompt-builder.ansiversa.com">Launch Prompt</AvButton>
      </div>
    </AvContainer>
  </section>

  <!-- Problem -->
  <section class="av-section">
    <AvContainer size="narrow">
      <div class="av-section-header">
        <h2 class="av-section-title">The problem it solves</h2>
        <p class="av-section-lead">
          Blank pages and inconsistent ideas slow down your writing.
        </p>
      </div>
      <div class="av-section-body space-y-3 text-slate-300">
        <p>Prompt Builder gives you guided structure so you can write faster and better.</p>
      </div>
    </AvContainer>
  </section>

  <!-- Why this mini app -->
  <section class="av-section">
    <AvContainer size="narrow">
      <div class="av-section-header">
        <h2 class="av-section-title">Why Prompt Builder feels different</h2>
        <p class="av-section-lead">
          A focused mini app inside the larger Ansiversa ecosystem.
        </p>
      </div>
      <div class="av-section-body">
        <ul class="space-y-2 text-slate-300 list-disc list-inside">
          <li>Built for creators, marketers, and writers of all levels.</li>
          <li>Turns rough ideas into clear, well-structured content.</li>
          <li>Lets you reuse and adapt your best writing patterns.</li>
        </ul>
      </div>
    </AvContainer>
  </section>

  <!-- How it works -->
  <section class="av-section">
    <AvContainer size="narrow">
      <div class="av-section-header">
        <h2 class="av-section-title">How it works</h2>
        <p class="av-section-lead">
          Simple, clear steps so people can start in under a minute.
        </p>
      </div>
      <ol class="av-section-body space-y-2 text-slate-300 list-decimal list-inside">
        <li>Open Prompt Builder when you’re ready to write.</li>
        <li>Choose the type of piece or style you want.</li>
        <li>Refine the generated ideas or text until it fits your voice.</li>
      </ol>
    </AvContainer>
  </section>

  <!-- Final CTA -->
  <section class="av-section">
    <AvContainer size="narrow">
      <div class="av-section-header">
        <h2 class="av-section-title">Ready to try Prompt Builder?</h2>
        <p class="av-section-lead">
          Open the app, follow the simple flow, and let it handle the heavy lifting.
        </p>
      </div>
      <div class="av-cta-row">
        <AvButton href="https://prompt-builder.ansiversa.com">Start with Prompt</AvButton>
      </div>
    </AvContainer>
  </section>
</AppShell>
